import { Data } from '../../Data._ts';
import { Realm } from '../../realm/Realm';
import Util from '../../Util';

export type Government = { rank: string; ruler: string; size: number[] };

export class GovernmentModule {
  static determine(realm: Realm) {
    let govt: Government;
    do {
      govt = Util.randomValue(Data.governmentRanks);
    } while (!govt.size.includes(realm.sizeIndex));

    realm.governmentRank = govt.rank;
    realm.tags.push(realm.governmentRank);

    realm.leaderTitle = govt.ruler;
    return realm;
  }
}
